{% extends 'base.html.twig' %}

{% block title %}Games & Friends - Gestion des évènements{% endblock %}

{% block body %}
    <div class="container mt-4">
    {% if not events is same as([]) %}
        <h1 class="mt-4">Evènements</h1>

    <a href="{{ path('event.new') }}" class="btn btn-outline-primary">
        Ajouter un évènement
    </a>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success mt-4">
            {{ message }}
        </div>
    {% endfor %}

        <small>
            <div class="count mt-4">
                <p>{{ events.getTotalItemCount }} évènements sont disponibles sur le site.</p>
            </div>
        </small>
        <div class="navigation">
            {{ knp_pagination_render(events) }}
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Admin</th>
                    <th scope="col">Jeu</th>
                    <th scope="col">Date de début</th>
                    <th scope="col">Date de fin</th>
                    <th scope="col">Nombre de joueur maximum</th>
                    <th scope="col">Description</th>
                </tr>
            </thead>
            <tbody>
            {% for event in events %}
                <tr class="table-light">
                    <th scope="row">{{event.eventName}}</th>
                    <th scope="row">{{event.eventAdmin}}</th>
                    <th scope="row">{{event.eventGame}}</th>
                    <th scope="row">{{event.eventStartAt|date('d/m/y H:i')}}</th>
                    <th scope="row">{{event.eventEndAt|date('d/m/y H:i')}}</th>
                    <th scope="row">{{event.eventMaxPlayer}}</th>
                    <th scope="row">{{event.eventDescription}}</th>
                    <td><a href="{{ path('event.edit', { id: event.id })}}" class="btn btn-outline-primary">Modifier</a></td>
                    <td><a href="{{ path('event.delete', { id: event.id })}}"class="btn btn-outline-primary">Supprimer</a></td>
                </tr>
            </tbody>

        {% endfor %}
        </table>
        <div class="navigation">
            {{ knp_pagination_render(events) }}
        </div>
    {% else %}
        <div class="mt-4">Aucun évènement n'est disponible.</div>
    {% endif %}
    </div>
{% endblock %}
