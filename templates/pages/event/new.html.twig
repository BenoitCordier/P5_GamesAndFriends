{% extends "base.html.twig" %}
{% set showEventNav = true %}

{% block title %}Games & Friends - Créer un évènement{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mt-4">
            Ajouter un évènement
        </h1>

        {{ form_start(form) }}

        <div class="form-group">
            {{ form_label(form.eventName) }}
            {{ form_widget(form.eventName) }}
            <div class="form-error">
                {{ form_errors(form.eventName) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.eventDescription) }}
            {{ form_widget(form.eventDescription) }}
            <div class="form-error">
                {{ form_errors(form.eventDescription) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.eventStartAt) }}
            {{ form_widget(form.eventStartAt) }}
            <div class="form-error">
                {{ form_errors(form.eventStartAt) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.eventEndAt) }}
            {{ form_widget(form.eventEndAt) }}
            <div class="form-error">
                {{ form_errors(form.eventEndAt) }}
            </div>
        </div>

        <div class="autocomplete-container form-group" id="autocomplete-container">
            <label class="mt-4" for="signin_adress">Adresse</label>
            <small id="adressHelp" class="form-text text-muted">Votre adresse ne sera utilisée qu'à des fins de localisation et ne sera jamais communiqué à quiconque.</small>
        </div>

        <div class="form-group">
            {{ form_label(form.eventMaxPlayer) }}
            {{ form_widget(form.eventMaxPlayer) }}
            <div class="form-error">
                {{ form_errors(form.eventMaxPlayer) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.eventGame) }}
            {{ form_widget(form.eventGame) }}
            <div class="form-error">
                {{ form_errors(form.eventGame) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_row(form.submit) }}
        </div>

        {{ form_end(form) }}
    </div>
    <script src="{{ asset('js/locationScript.js') }}"></script>
{% endblock %}