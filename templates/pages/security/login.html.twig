{% extends 'base.html.twig' %}

{% block title %}Games & Friends - Connexion{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mt-4">Connexion</h1>
    {% if error %}
    <div class="alert alert-danger mt-4">
        {{ error.messageKey|trans(error.messageData, 'security') }}
    </div>
    {% endif %}
    <form action="{{ path('security.login') }}" method="POST">
    <div class="form-group">
        <label for="username" class="form-label mt-4">Adresse email</label>
        <input type="email" class="form-control" id="username" name="_username" aria-describedby="emailHelp" placeholder="exemple@gamesandfriends.fr" value="{{ last_username }}">
        <small id="emailHelp" class="form-text text-muted">Votre adresse mail ne sera utilisée qu'à des fins d'authentifications et ne sera jamais communiqué à quiconque.</small>
    </div>
    <div class="form-group">
        <label for="password" class="form-label mt-4">Mot de passe</label>
        <input type="password" class="form-control" id="password" name="_password" placeholder="********" autocomplete="off">
    </div>
    <button type="submit" class="btn btn-outline-primary mt-4">Connexion</button>
    </form>
</div>
{% endblock %}
