{% extends "base.html.twig" %}

{% block title %}Games & Friends - Nouveau message{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mt-4">
            Nouveau message
        </h1>
        <a href="{{ path('message.index') }}" class="btn btn-outline-primary m-4">
            Revenir en arri√®re
        </a>
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.messageText) }}
            {{ form_widget(form.messageText) }}
            <div class="form-error">
                {{ form_errors(form.messageText) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_row(form.submit) }}
        </div>
        {{ form_end(form) }}
        {% include "partials/_push.html.twig" %}
    </div>
{% endblock %}