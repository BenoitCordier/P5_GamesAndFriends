{% extends "base.html.twig" %}

{% block title %}Games & Friends - Conversation avec username{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mt-4">
            Conversation avec username
        </h1>

        <h2 class="mt-4">
            Ancien message
        </h2>

        <h2 class="mt-4">
            Nouveau message
        </h2>
        {{ form_start(form) }}

        <div class="form-group">
            {{ form_label(form.messageText) }}
            {{ form_widget(form.messageText) }}
            <div class="form-error">
                {{ form_errors(form.messageText) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_row(form.submit) }}
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}