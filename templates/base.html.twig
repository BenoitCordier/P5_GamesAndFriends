<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            <!-- Bootstrap -->
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
            <!-- Bootswatch -->
            <link 
            href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.1/dist/lux/bootstrap.min.css"
            rel="stylesheet">
            <!-- CSS -->
            <link href="{{ asset('css/style.css') }}" rel="stylesheet" />
            <!-- Leaflet -->
            <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
            <!-- Geoapify -->
            <link rel="stylesheet" href="https://unpkg.com/@geoapify/leaflet-address-search-plugin@^1/dist/L.Control.GeoapifyAddressSearch.min.css" />
        {% endblock %}

        {% block javascriptHead %}
            <!-- Leaflet -->
            <script type="text/javascript" src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
            <link rel="stylesheet" src="https://unpkg.com/leaflet.markercluster@1.4.1/dist/MarkerCluster.css" />
            <link rel="stylesheet" src="https://unpkg.com/leaflet.markercluster@1.4.1/dist/MarkerCluster.Default.css" />
            <script type="text/javascript" src="https://unpkg.com/leaflet.markercluster@1.4.1/dist/leaflet.markercluster-src.js"></script>            
            <!-- Geoapify -->
            <script src="https://unpkg.com/@geoapify/leaflet-address-search-plugin@^1/dist/L.Control.GeoapifyAddressSearch.min.js"></script>
            <!-- FOSJs -->
            <script src="{{ asset('bundles/fosjsrouting/js/router.min.js') }}"></script>
            <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
            <!-- FontAwesome -->
            <script src="https://kit.fontawesome.com/df0dafa5f2.js" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body>
        {% block header %}
            {% if app.user == null %}
                {% include "partials/_header.html.twig" %}
            {% endif %}
            {% if app.user %}
                {% include "partials/_headerUser.html.twig" %}
                {% if app.user.roles[0] is same as("ROLE_ADMIN") %}
                    {% include "partials/_headerAdmin.html.twig" %}
                {% endif %}
                {% if showEventNav ?? '' %}
                    {% include "partials/_headerEvent.html.twig" %}
                {% endif %}
                {% if showSearchBar ?? '' %}
                    {% include "partials/_headerMap.html.twig" %}
                {% endif %}
            {% endif %}
        {% endblock %}
        {% block body %}{% endblock %}
        {% block footer %}
            {% if showFooter ?? '' %}
                {% include "partials/_footer.html.twig" %}
            {% endif %}
        {% endblock %}
        {% block javascriptEnd %}
        <!-- Bootstrap -->
            <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
